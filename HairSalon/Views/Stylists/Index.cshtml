@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Current Stylists!</h1>

@if (Model.Count == 0)
{
  <p>There are no current stylists!</p>
}
else
{
  <ul>
    @foreach( Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
}

<div class="nav-bar">
  <div class="nav-link">@Html.ActionLink("Add a new client", "Create", "Clients")</div>
  <div class="nav-link">@Html.ActionLink("Add new stylist", "Create")</div>
  <div class="nav-link">@Html.ActionLink("Home", "Index", "Home")</div>
</div>