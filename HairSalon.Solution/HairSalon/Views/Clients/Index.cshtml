@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@* @model List<HairSalon.Models.Client>; *@

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added for any stylists yet!</h3>
} 

@foreach (Client cust in Model)
{
  <li>@Html.ActionLink($"{cust.Name}", "Details", new { id = cust.ClientId }) | @cust.Stylist.Name</li>
}
<div class="nav-bar">
  <div class="nav-link">@Html.ActionLink("Add new client", "Create")</div>
  <div class="nav-link">@Html.ActionLink("Home", "Index", "Home")</div>
</div>