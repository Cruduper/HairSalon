@{
  Layout = "_Layout";
}
@using HairSalon.Models

<h1>Details for: @Model.Name</h1>

<ul>
  <li>Specialty: @Model.Specialty</li>
  <li>Price: 
    @{int i = 0;
      @for(; i < @Model.Price; i++)
      {
        <span class="money-green">$</span>
      }
      for(; i < 5; i++)
      {
        <span class="money-grey">$</span>
      }
    } 
  </li>
  <li>Experience Level: @Model.Experience</li>
  <li>Speed: [slow]
    @{int j = 1;
      @for(; j < @Model.CuttingSpeed; j++)
      {
        <span class="money-grey">✂︎</span>
      }
      <span class="money-green">✂︎</span>
      for(; j < 5; j++)
      {
        <span class="money-grey">✂︎</span>
      }
    } 
    [FAST]
  </li>
  <ol>
  @foreach (Client cust in @Model.Clients) 
  {
    <li>@Html.ActionLink(@cust.Name, "Details", "Clients", new { id = cust.ClientId })</li>
  }
  </ol>
</ul>

<div class="nav-bar">
  <div class="nav-link">@Html.ActionLink("Add a new client", "Create", "Clients")</div>
  <div class="nav-link">@Html.ActionLink("Back to stylists", "Index")</div>
  <div class="nav-link">@Html.ActionLink("Home", "Index", "Home")</div>
</div>